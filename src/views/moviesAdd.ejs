<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">
            <label for="title">Title </label>
            <div>
                <input type="text" class="form-control <%= locals.errors && errors.title ? 'is-invalid' : null  %>" id="title" name="title" value="<%= locals.old && old.title ? old.title : null %>">
                <small class="text-danger"><%= locals.errors && errors.title ? errors.title.msg : null %></small>
            </div>
            <label for="rating">Rating </label>
            <div>
                <input type="number" class="form-control <%= locals.errors && errors.rating ? 'is-invalid' : null  %>" id="rating" name="rating" value="<%= locals.old && old.rating ? old.rating : null %>">
                <small class="text-danger"><%= locals.errors && errors.rating ? errors.rating.msg : null %></small>
            </div>
            <label for="awards">Awards </label>
            <div>
                <input type="number" class="form-control <%= locals.errors && errors.awards ? 'is-invalid' : null  %>" id="awards" name="awards" value="<%= locals.old && old.awards ? old.awards : null %>">
                <small class="text-danger"><%= locals.errors && errors.awards ? errors.awards.msg : null %></small>

            </div>
            <label for="release_date">Release date </label>
            <div>
                <input type="date" class="form-control <%= locals.errors && errors.release_date ? 'is-invalid' : null  %>" id="release_date" name="release_date" value="<%= locals.old && old.release_date ? old.release_date : null %>">
                <small class="text-danger"><%= locals.errors && errors.release_date ? errors.release_date.msg : null %></small>
            </div>
            <label for="length">Length </label>
            <div>
                <input type="number" class="form-control <%= locals.errors && errors.length ? 'is-invalid' : null  %>" id="length" name="length" value="<%= locals.old && old.length ? old.length : null %>">
                <small class="text-danger"><%= locals.errors && errors.length ? errors.length.msg : null %></small>
            </div>
            <label for="genre_id">Generos</label>
            <select name="genre_id" id="genre_id">
                <option value="" hidden selected>Seleccione el genero</option>
                <% genres.forEach(genre => { %>
                    <option value="<%= genre.id %>"><%= genre.name %> </option>
                <% }) %>
            </select>
            <br>
            <div> <button class="botonAgregar" type="submit" style="background-color: green ">Agregar</button>
            <br>
            <a class="botonVolver" href="/movies">Listado de Películas</a>
            </div>
        </form>
    </section>
    
</body>

</html>